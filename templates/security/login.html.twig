{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="flex flex-col md:flex-row h-screen items-center">

  <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <img src="images/Loginbattlekart.png" alt="" class="w-full h-full object-cover">
  </div>

  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">

    <div class="w-full h-100">

      {% if error %}
        <div class="alert alert-danger mb-6">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
      {% endif %}

      <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Connectez-vous</h1>

      <form class="mt-6" action="#" method="POST">
        <div>
          <label class="block text-gray-700">Pseudo</label>
          <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" placeholder="you@mail.com" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autocomplete="username" required autofocus>
        </div>

        <div class="mt-4">
          <label class="block text-gray-700">Mot de Passe</label>
          <input type="password" name="password" id="inputPassword" placeholder="Mot de passe..." minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
              px-4 py-3 mt-6">Log In</button>
      </form>

      <!-- Autres éléments du formulaire, comme le lien "Mot de passe oublié", la connexion avec Google et le lien pour créer un compte -->

    </div>
  </div>

</section>
{% endblock %}
