{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<section class="page-title bg-2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>{{ article.titre }}</h1>
          <p>publie le {{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="page-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="post post-single">
					<h2 class="post-title">{{ article.titre }}</h2>
					<div class="post-meta">
						<ul>
							<li>
								<i class="ion-calendar"></i> {{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}
							</li>
							<li>
								<i class="ion-android-people"></i> POSTED BY {{article.user}}
							</li>
							<li>
								<a href="blog-grid.html"><i class="ion-pricetags"></i> {{article.categorie}}</a>
							</li>

						</ul>
					</div>
					<div class="post-thumb">
						<img class="img-fluid" src="images/blog/blog-post-1.jpg" alt="">
					</div>
					<div class="post-content post-excerpt">
						<p>{{ article.contenu }}</p>
					</div>
<a href="{{ path('app_article_index') }}">back to list</a>
    {% if is_granted('POST_EDIT',article) %}
    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
    		{% endif %}

{% endblock %}
