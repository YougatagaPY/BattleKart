{% extends 'base.html.twig' %}

{% block title %}Quiz Pilote F1{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen bg-gray-100">
        <div class="w-full max-w-md p-8 space-y-8 bg-white shadow-lg rounded-lg">
            <h1 class="text-xl font-bold text-center text-gray-800">Trouvez votre pilote de F1</h1>
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                {% for field in form %}
                    <div class="space-y-2">
                        <label for="{{ field.vars.full_name }}" class="text-sm font-medium text-gray-700">{{ field.vars.label }}</label>
                        <div class="mt-1">
                            {{ form_widget(field, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        </div>
                    </div>
                {% endfor %}
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">DÃ©couvrir mon pilote</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
